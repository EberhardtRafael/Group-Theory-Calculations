{
  "$schema": "https://biomejs.dev/schemas/2.4.4/schema.json",
  "files": {
    "experimentalScannerIgnores": [".next", "node_modules", "dist", "build", ".turbo"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "javascript": {
    "formatter": {
      "semicolons": "always",
      "trailingCommas": "es5",
      "quoteStyle": "single"
    }
  }
}
